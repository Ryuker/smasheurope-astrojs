---
import '../styles/global.scss';
import { getEntry } from 'astro:content';

import RankingLoader from '../components/rankings/ranking-loader.astro';
import BaseLayout from '../layouts/base-layout.astro';

const ultRanking = await getEntry('rankings', 'ultimate/01_ult-rank-2023');
const meleeRanking = await getEntry('rankings', 'melee/01_melee-rank-2023');
const projectPlusRanking = await getEntry('rankings', 'project+/01_project-plus-rank-2023');
const smashBrosForWiiURanking = await getEntry('rankings', 'smash-bros-for-wii-u/01_smash-bros-for-wii-u-rank-2023');


---

<BaseLayout title="Home">
  <div class="container">
    <h1>Rankings</h1>
    <RankingLoader ranking={ultRanking} isFull={false} slug="ultimate-ranking" />
    <RankingLoader ranking={meleeRanking} isFull={false} slug="melee-ranking" />
    <RankingLoader ranking={projectPlusRanking} isFull="false" slug="project-plus-ranking" />
    <RankingLoader ranking={smashBrosForWiiURanking} isFull="false" slug="smash-bros-for-wii-u-ranking" />
  </div>
  
</BaseLayout>

<style lang="scss">
  .container {
    display:flex;
    flex-direction: column;
    max-width: inherit;
  }
</style>