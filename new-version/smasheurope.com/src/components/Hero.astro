---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import Button from './ui/Button.astro';
import LinkButton from './ui/LinkButton.astro';
import Logo from '@assets/images/global/se-logo.png';
import Modal from './ui/Modal.astro';


const { title } = Astro.props;
---
<section class="flex justify-center">
  <div class="container bg-white flex mx-5 sm:mx-10 p-8 rounded-lg max-w-l md:max-w-6xl shadow-lg lg:space-x-3 flex-col lg:flex-row">
    <div class="flex flex-col space-y-3 lg:w-2/3">
      <h1 class="text-se-dark text-2xl font-semibold">{title}</h1>
      <div class="text-se-muted space-y-3 text-m">
        <slot />
      </div>
      <div class="pt-4 flex basis-full justify-center md:justify-start">
        <div class="flex gap-3 w-full md:w-fit flex-wrap lg:flex-nowrap justify-around lg:justify-start flex-col md:flex-row">
          <Button icon="calendar" />
          <Modal icon="calendar">
            <main slot="main">
              <p>Calendar embedded</p>
            </main>
            <button slot="close" class="bg-red-200">Close modal</button>
          </Modal>
          <LinkButton icon="community" newTab={true} 
            url="https://docs.google.com/spreadsheets/d/11ElDfT0YmpIuiuApQ95lnoKM3b6BIe8MXmPyUfK4Sx8"
          />
          <LinkButton icon="x" newTab={true} 
            url="https://twitter.com/smasheurope"
          />
          <LinkButton icon="fb" newTab={true} 
            url="https://www.facebook.com/smasheurope/"
          />
          <LinkButton icon="twitch" newTab={true} 
            url="https://twitch.tv/smasheurope"
          />
          <LinkButton icon="yt" newTab={true} 
            url="https://youtube.com/smasheurope"
          />
          <LinkButton icon="reddit" newTab={true} 
            url="https://www.reddit.com/r/smasheurope/"
          />
        </div>
      </div>
    </div>  
    <div class="flex md:flex-1 order-first lg:order-last justify-center items-center mb-5 lg:mb-0">
      <Image src={Logo} alt="SmashEurope Logo" class="flex basis-0 lg:basis-full items-center py-2 object-scale-down"/>
    </div>
  </div>
</section>